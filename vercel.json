{
  "version": 2,
  "builds": [
    {
      "src": "package.json",
      "use": "@vercel/static-build",
      "config": { "distDir": "dist/public" }
    },
    {
      "src": "server/vercel-handler.ts",
      "use": "@vercel/node"
    }
  ],
  "routes": [
    { "src": "^/api/(.*)", "dest": "/server/vercel-handler.ts" },
    { "src": "^/health$", "dest": "/server/vercel-handler.ts" },
    { "src": "^/bots.override.json$", "dest": "/server/vercel-handler.ts" },
    { "src": "^/admin/(.*)", "dest": "/server/vercel-handler.ts" },
    { "handle": "filesystem" },
    { "src": "^(?:/.*)?$", "dest": "/dist/public/index.html" }
  ]
}
